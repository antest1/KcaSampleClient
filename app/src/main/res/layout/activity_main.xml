<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antest1.kcasampleclient.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/btn_receiver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="ToggleButton"
                android:textOff="Receiver OFF"
                android:textOn="Receiver ON" />

            <Button
                android:id="@+id/btn_launch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Game" />

        </LinearLayout>

        <TextView
            android:id="@+id/label_ts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="Timestamp"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_ts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:text="DATA"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/label_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="Url"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:text="DATA"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/label_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="Request"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:text="DATA"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/label_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp"
            android:text="Response"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:text="DATA"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>
